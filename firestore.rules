rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Projects: Public Read, Admin Write
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Settings Profile (Socials, Resume): Public Read, Admin Write
    match /settings/profile {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Settings Configuration (API Key): Admin Read/Write Only
    // This is strictly protected so public cannot see the API Key
    match /settings/config {
      allow read, write: if isAuthenticated();
    }

    // Messages: Public Create, Admin Read/Delete
    match /messages/{messageId} {
      allow create: if true;
      allow read, delete: if isAuthenticated();
      allow update: if false;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
